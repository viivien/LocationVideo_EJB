<?xml version="1.0" encoding="UTF-8"?>
<persistence 
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="LocationVideoPersistence">
		<properties>
		    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
		    <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="locationvideo"/>
            <property name="hibernate.connection.password" value="locationvideo"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://127.0.0.1:3306/location_video"/>
            <property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>